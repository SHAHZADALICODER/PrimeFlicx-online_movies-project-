<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="5dp"
		android:background="#CFD8DC"
		android:gravity="center_horizontal"
		android:orientation="vertical">

		<ImageView
			android:id="@+id/movie_or_show_thumbnail"
			android:layout_width="match_parent"
			android:layout_height="200dp"
			android:focusable="false"
			android:scaleType="fitXY"
			android:src="@drawable/testmoviebanner"
			tools:ignore="ImageContrastCheck" />
		<TextView
			android:id="@+id/movie_or_show_name"
			android:focusable="false"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="All Of Us Are Dead Season_01 Episode Null , Full HD series || KDRAMA"
			android:textSize="14sp"
			android:textStyle="bold"
			android:textColor="#000000" />
		<LinearLayout
			android:id="@+id/linear2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#FFFFFF"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/tag"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:focusable="false"
				android:padding="8dp"
				android:text="#Kdrama"
				android:textColor="#0277BD"
				android:textSize="12sp" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/extra_buttons_layout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/like_button"
				android:focusable="false"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:src="@drawable/ic_favorite_black"
				android:scaleType="fitXY" />
			<ImageView
				android:id="@+id/share_button"
				android:focusable="false"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:layout_marginLeft="10dp"
				android:src="@drawable/ic_send_black"
				android:scaleType="fitXY" />
			<ImageView
				android:id="@+id/movie_or_show_download_button"
				android:focusable="false"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:layout_marginLeft="10dp"
				android:src="@drawable/ic_cloud_download_black"
				android:scaleType="fitXY" />
		</LinearLayout>
		<TextView
			android:id="@+id/random_num"
			android:focusable="false"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="TextView"
			android:textSize="10sp"
			android:textColor="#000000" />
	</LinearLayout>
</LinearLayout>
